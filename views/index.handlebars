<div class="menu">
  <br>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/index">Tori's Deli
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
          <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/menu">Menu</a>
          </li>
          <li class="nav-item">
              <a class="nav-link active" href="/orders">Check Orders<span class="sr-only">(current)</span></a>
          </li>
          </ul>
      </div>
  </nav>

  <h1 class="menu-title animated fadeInRight">Tori's Deli </h1>

  
  <div id="card-wrap">
  
    <div id="card-menu">

      <div class="queued">
          <h2 class="ordered-title">Crafting your order</h2>
          <ul class="queued-orders">

          {{#each dishes}}
            <li  class="list-group-item"><!--data-id="{{this.id}}"-->
             <!-- <a href="dish/{{this.id}}">{{this.text}}</a>-->
              <p>Order: {{this.text}} </p>
              <p>Ticket # {{this.id}}</p>
            <!--  <p>created {{this.createdAt}}</p>-->
            </li>
          {{/each}}
          </ul>
      </div>

      <div class="completed">
          <h2 class="ordered-title">Ready for pick up</h2>
          <ul class="completed-orders">
          
          {{#each dishes}}
            {{#if this.ready}}
            <li  class="list-group-item"><!--data-id="{{this.id}}"-->
              <a href="dish/{{this.id}}">{{this.text}}</a>
              <button class="btn btn-danger float-right delete">Pick Up</button>
            </li>
            {{/if}}
          {{/each}}
          </ul>
      </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Order Number</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" >
                
                <p># {{this.id}}</p>
            
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                </div>
            </div>
        </div>  


  </div>
</div>  
