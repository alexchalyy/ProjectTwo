  <h1 class="menu-title animated fadeInRight">Tori's Deli </h1>

  <div id="card-wrap">
  
    <div id="card-menu">

      <div class="queued">
          <h2 class="ordered-title">Crafting your order</h2>
          <ul class="queued-orders">

          {{#each dishes}}
          {{#if this.ready}}
          {{else}}
            <li  class="list-group-item"><!--data-id="{{this.id}}"-->
             <!-- <a href="dish/{{this.id}}">{{this.text}}</a>-->
              <p>Order: {{this.text}} </p>
              <p>Ticket # {{this.id}}</p>
            </li>
            {{/if}}
          {{/each}}
          </ul>
      </div>

      <div class="completed">
          <h2 class="ordered-title">Ready for pick up</h2>
          <ul class="completed-orders">
          
          {{#each dishes}}
            {{#if this.ready}}
            <li  class="list-group-item"><!--data-id="{{this.id}}"-->
              <a href="dish/{{this.id}}">Order: {{this.text}}</a>
              <p>Ticket # {{this.id}}</p>
              <button class="btn btn-danger float-center delete">Pick Up</button>
            </li>
            {{/if}}
          {{/each}}
          </ul>
      </div><!--
      <div class="col-5 offset-2">
        <h3>Ready to pick up</h3>
